{
  "manifest_version": 3,
  "name": "Just Translate",
  "description": "simplify the use of translation",
  "permissions": ["contextMenus", "tabs", "scripting", "activeTab"],
  "version": "1.0",
  "icons": {
    "16": "public/images/icon-16.png",
    "32": "public/images/icon-32.png",
    "48": "public/images/icon-48.png",
    "128": "public/images/icon-128.png"
  },
  "background": {
    "service_worker": "public/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["public/content.js"]
    }
  ],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/images/icon-32.png"
  }
}
